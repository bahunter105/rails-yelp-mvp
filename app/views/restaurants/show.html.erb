<h1><%= @restaurant.name %></h1>
<%= link_to "Back to Restaurants", restaurants_path %>

<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>

</ul>
<%# <%= link_to "Add a New Review", new_restaurant_review_path(@restaurant) %> %>
<% @restaurant.reviews.each do |review|%>
<div>
  <div>
    <p><%= review.rating%></p>
  </div>
  <div>
    <p> <%= review.content %> </p>
  </div>
</div>
<% end %>

<h2>Review Restaurant</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit New Review", class: "btn btn-primary" %>
<% end %>
